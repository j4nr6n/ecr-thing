<form class="d-inline"
      method="post"
      action="{{ path('admin_user_delete', {'id': user.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete {{ user.email }}?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete_user_' ~ user.id) }}">
    <button class="btn btn-danger {{ sm|default(false) ? 'btn-sm' }}">Delete</button>
</form>
